<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Little Esty Shop</a>
    <button class="navbar-toggler" type="button" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="mx-auto">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link"><%= link_to "Home", root_path, class: "link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link"><%= link_to "Admin Home", admin_index_path, class: "link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link"><%= link_to "Admin Invoices", admin_invoices_path, class: "link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link"><%= link_to "Admin Merchants", admin_merchants_path, class: "link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link"><%= link_to "Merchants Home", merchants_path, class: "link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link"><%= link_to 'Back', :back, class: "link" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<% flash.each do |type, message| %>
  <p><%= message %></p>
<% end %>

<div class="footer">
	<span class="text-muted">Items in Cart: <%= @cart.total %>
  <%= button_to "Check Out", cart_path(@cart), method: :delete %></span>
</div>

    <%= yield %>
  </body>
</html>
