<%= form_with model: [:merchant, Discount.new], local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: @discount.name ||= "Enter Name" %><br>

  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold, min: 0, placeholder: @discount.quantity_threshold ||= "Enter Description" %><br>

  <%= f.label :percentage_discount %>
  <%= f.number_field :percentage_discount, min: 0, placeholder: @discount.percentage_discount ||= "Enter Selling Price" %>

  <%= f.submit 'Create Discount' %>
<% end %>
